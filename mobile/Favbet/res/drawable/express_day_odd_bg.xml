<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_corned_radius" />
                    <solid android:color="?btn_betslip_accent_color" />
                </shape>
            </item>
            <item android:drawable="?selectableItemBackground" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_corned_radius" />
                    <solid android:color="?btn_betslip_bg_color" />
                    <stroke android:width="1.0dip" android:color="?btn_betslip_line_color" />
                </shape>
            </item>
            <item android:drawable="?selectableItemBackground" />
        </layer-list>
    </item>
</selector>