<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_corned_radius" />
                    <stroke android:width="1.0dip" android:color="?accent_red" />
                    <solid android:color="?primary_white" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_corned_radius" />
                    <solid android:color="?primary_white" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="?selectableItemBackground" />
</layer-list>