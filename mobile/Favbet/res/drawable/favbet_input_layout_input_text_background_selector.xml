<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true" app:state_error_boolean="false">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="?input_bg_color_1" />
            <corners android:radius="@dimen/default_corned_radius" />
            <stroke android:width="@dimen/dist_1" android:color="?input_border_focus" />
        </shape>
    </item>
    <item android:state_enabled="true" app:state_error_boolean="true">
        <shape android:shape="rectangle">
            <solid android:color="?input_bg_color_1" />
            <corners android:radius="@dimen/default_corned_radius" />
            <stroke android:width="@dimen/dist_1" android:color="?input_border_error" />
        </shape>
    </item>
    <item android:state_enabled="false" app:state_error_boolean="true">
        <shape android:shape="rectangle">
            <solid android:color="?input_bg_color_2" />
            <corners android:radius="@dimen/default_corned_radius" />
            <stroke android:width="@dimen/dist_1" android:color="?input_border_error" />
        </shape>
    </item>
    <item app:state_error_boolean="false">
        <shape android:shape="rectangle">
            <solid android:color="?input_bg_color_1" />
            <corners android:radius="@dimen/default_corned_radius" />
            <stroke android:width="@dimen/dist_1" android:color="?input_border_color_1" />
        </shape>
    </item>
</selector>